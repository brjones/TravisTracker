<style>

body                {background: #EEEEEE;}


.monit-application {
  font-family: 'Segoe UI', Frutiger, 'Frutiger Linotype', 'Dejavu Sans', 'Helvetica Neue', Arial, sans-serif;
  /*width: 210px;
  height: 200px;*/
  width: 15em;
  height: 15em;
  border: 1px solid black;
  margin-left: 2em;
  position:relative;
  float: left;
  padding-top: 0.5em;
  color: white;
}

.monit-application-success {
  background-color: rgb(35,141,26);
}

.monit-application-error {
  /*background-color: rgb(86,0,0);*/
  background-color: rgb(167,7,22);
}

.monit-application .title {
  bottom: 0.5em;
  right: 0.5em;
  position: absolute;
  font-size: x-large;
}

.monit-application .process {
  padding-left: 1em;
}

.monit-application .process .name {
  font-size: large;
}


/**
* gradient
**/
.monit-application-success {
background: #238d1a; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(-45deg,  #238d1a 0%, #23641a 99%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, right bottom, color-stop(0%,#238d1a), color-stop(99%,#23641a)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(-45deg,  #238d1a 0%,#23641a 99%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(-45deg,  #238d1a 0%,#23641a 99%); /* Opera 11.10+ */
background: -ms-linear-gradient(-45deg,  #238d1a 0%,#23641a 99%); /* IE10+ */
background: linear-gradient(135deg,  #238d1a 0%,#23641a 99%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#238d1a', endColorstr='#23641a',GradientType=1 ); /* IE6-8 fallback on horizontal gradient */

/**
// needs latest Compass, add '@import "compass"' to your scss
background-color: #238d1a; // Old browsers
@include filter-gradient(#238d1a, #23641a, horizontal); // IE6-8 fallback on horizontal gradient
// IE9 SVG, needs conditional override of 'filter' to 'none'
$experimental-support-for-svg: true;
@include background-image(linear-gradient(left top,  #238d1a 0%,#23641a 99%));

**/
}

.monit-application-error {
background: #a70716; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(-45deg,  #a70716 0%, #7e0716 99%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, right bottom, color-stop(0%,#a70716), color-stop(99%,#7e0716)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(-45deg,  #a70716 0%,#7e0716 99%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(-45deg,  #a70716 0%,#7e0716 99%); /* Opera 11.10+ */
background: -ms-linear-gradient(-45deg,  #a70716 0%,#7e0716 99%); /* IE10+ */
background: linear-gradient(135deg,  #a70716 0%,#7e0716 99%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#a70716', endColorstr='#7e0716',GradientType=1 ); /* IE6-8 fallback on horizontal gradient */


/**
// needs latest Compass, add '@import "compass"' to your scss
background-color: #a70716; // Old browsers
@include filter-gradient(#a70716, #7e0716, horizontal); // IE6-8 fallback on horizontal gradient
// IE9 SVG, needs conditional override of 'filter' to 'none'
$experimental-support-for-svg: true;
@include background-image(linear-gradient(left top, #a70716 0%,#7e0716 99%));
**/
}



</style>

