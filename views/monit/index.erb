<h2>Hosts</h2>
<div class="row">
  <% @status.each_host do |host| %>
    <div class="col-md-4">
      <div class="panel">
        <div class="panel-heading">
          <%= host.name %>
        </div>
        <div class="panel-body">
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
              60%
            </div>
          </div>
        </div>

    </div>
  </div>
  <% end %>
</div>
<h2>Environments</h2>
<% @status.each_environment do |environment| %>
    <div class="panel">
      <div class="panel-heading">
        <h3><%= environment.name %></h3>
      </div>
      <div class="panel-body">
          <% environment.each_application do |application| %>
            <div class="monit-application monit-application-<%= application.state_description %> ">
              <div class="title"><%= application.name %></div>
              <% application.each_process do |name, service| %>
                <div class="process"><span class="name"><%= name %>:</span>
                  <%= [
                    service.state, service.monitor_info, service.monitor_mode, service.pending_action,
                    service.hostname, service.portnumber, service.request, service.protocol
                    ].join(',') %>
                </div>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
<% end %>
